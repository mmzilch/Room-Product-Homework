<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ProductbyPriceActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp">
    <EditText
        android:id="@+id/editMinValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="number"
        android:hint="Minimum Price"
        android:layout_marginRight="2dp"/>

    <EditText
        android:id="@+id/editMaxValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:inputType="number"
        android:hint="Maximum Price"
        android:layout_marginLeft="2dp"/>
</LinearLayout>
    <Button
        android:id="@+id/btnGetPriceData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search by Price"
        android:background="@drawable/btn_shape"/>
</LinearLayout>